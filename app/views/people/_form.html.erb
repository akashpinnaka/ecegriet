<div id="form_wrapper">
	<%= form_for @person do |f| %>
    <div id="form_wrapper_in" class="cf">
      <div id="first_data_part">
        <%= f.text_field :name, placeholder: "Name of the person" %><br>
        <%= f.number_field :id_number, placeholder: "ID number" %><br>
        <%= f.text_field :designation, placeholder: "Designation" %><br>
        <%= f.text_field :qualification, placeholder: "Qualification" %><br>
        <%= f.number_field :teaching_experience, placeholder: "Teaching experience" %><br>
        <%= f.number_field :industry_experience, placeholder: "Industry experience" %>  
      </div>
      <div id="second_data_part">    
    	  <%= f.text_field :research_interest, placeholder: "Research Interests" %><br>
    	  <%= f.text_area :description, placeholder: "Description" %>
      </div>
    </div>
    <div id="submit_button">
      <%= f.submit "Save Person" %>
    </div>    
	<% end %>	
</div>
